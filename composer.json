{
    "name": "scherzetto/test-case",
    "description": "Simple TestCase wrapper for Scherzetto",
    "type": "library",
    "require": {
        "phpunit/phpunit": "^7.0",
        "scherzetto/env": "^1.0"
    },
    "require-dev": {
        "codacy/coverage": "^1.4",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "friendsofphp/php-cs-fixer": "^2.14",
        "sensiolabs/security-checker": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin Zaslavsky",
            "email": "benjamin.zaslavsky@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {"Scherzetto\\TestCase\\":  "Scherzetto/TestCase"},
        "exclude-from-classmap": ["/Test/"]
    }
}
